{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx", // React 19/Vite 환경 필수 설정
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@joo/shared-ts": ["../../shared/ts"] // shared 로직 참조용
    }
  },
  "include": ["src/**/*"]
}
